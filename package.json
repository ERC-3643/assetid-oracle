{
  "name": "template",
  "version": "1.0.0",
  "description": "Template for ERC3643 related projects",
  "license": "GPL-3.0",
  "author": "Tokeny (APEX Group)",
  "repository": {
    "type": "git",
    "url": "https://github.com/tokeny-io/erc3643-template"
  },
  "scripts": {
    "prepare": "husky",
    "build": "forge build",
    "test": "forge test",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint:js": "prettier --log-level warn --ignore-path .gitignore '**/*.{js,ts}' --check && eslint .",
    "lint:js:fix": "prettier --log-level warn --ignore-path .gitignore '**/*.{js,ts}' --write && eslint . --fix",
    "lint:sol": "prettier --log-level warn --ignore-path .gitignore '{contracts,test}/**/*.sol' --check && solhint --config solhint.config.js --noPoster '{contracts,test}/**/*.sol'",
    "lint:sol:fix": "prettier --log-level warn --ignore-path .gitignore '{contracts,test}/**/*.sol' --write",
    "coverage": "forge coverage --no-match-coverage \"(libraries|test|script|node_modules)\"",
    "coverage:report": "mkdir -p coverage && forge coverage --no-match-coverage \"(libraries|test|script|node_modules)\" --report lcov --report-file coverage/lcov.info && genhtml coverage/lcov.info -o coverage/report --branch-coverage && open coverage/report/index.html",
    "clean": "forge clean"
  },
  "devDependencies": {
    "@ballcat/commitlint-config-gitmoji": "^1.1.0",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint": "^6.0.1",
    "solhint-plugin-openzeppelin": "file:scripts/solhint-custom",
    "solidity-coverage": "^0.8.16"
  },
  "commitlint": {
    "extends": [
      "@ballcat/commitlint-config-gitmoji"
    ]
  },
  "dependencies": {
    "@erc3643org/erc-3643": "^4.2.0-beta1",
    "@onchain-id/solidity": "^2.2.2-beta3",
    "@chainlink/contracts": "^1.4.0",
    "@openzeppelin/contracts": "^5.4.0",
    "forge-std": "github:foundry-rs/forge-std#v1.10.0"
  },
  "overrides": {
    "@erc-3643org/erc-3643": {
      "@openzeppelin/contracts": "^4.8.3",
      "@openzeppelin/contracts-upgradeable": "^4.8.3"
    }
  }
}
