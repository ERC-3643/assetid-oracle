{
  "name": "template",
  "version": "1.0.0",
  "description": "Template for ERC3643 related projects",
  "license": "GPL-3.0",
  "author": "Tokeny (APEX Group)",
  "repository": {
    "type": "git",
    "url": "https://github.com/tokeny-io/erc3643-template"
  },
  "scripts": {
    "prepare": "husky",
    "build:forge": "forge build",
    "build:hardhat": "hardhat compile",
    "test:forge": "forge test",
    "test:hardhat": "hardhat test",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:fix": "npm run lint:js:fix && npm run lint:sol:fix",
    "lint:js": "prettier --log-level warn --ignore-path .gitignore '**/*.{js,ts}' --check && eslint .",
    "lint:js:fix": "prettier --log-level warn --ignore-path .gitignore '**/*.{js,ts}' --write && eslint . --fix",
    "lint:sol": "prettier --log-level warn --ignore-path .gitignore '{contracts,test}/**/*.sol' --check && solhint --config solhint.config.js --noPoster '{contracts,test}/**/*.sol'",
    "lint:sol:fix": "prettier --log-level warn --ignore-path .gitignore '{contracts,test}/**/*.sol' --write",
    "coverage:hardhat": "hardhat coverage",
    "coverage:hardhat:report": "hardhat coverage && open coverage/index.html",
    "coverage:forge": "forge coverage --no-match-coverage \"(test|script|node_modules)\"",
    "coverage:forge:report": "mkdir -p coverage && forge coverage --no-match-coverage \"(test|script|node_modules)\" --report lcov --report-file coverage/lcov.info && genhtml coverage/lcov.info -o coverage/report --branch-coverage && open coverage/report/index.html",
    "clean": "hardhat clean && forge clean"
  },
  "devDependencies": {
    "@ballcat/commitlint-config-gitmoji": "^1.1.0",
    "@changesets/cli": "^2.29.6",
    "@commitlint/cli": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.1",
    "chai": "^4.5.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint": "^6.0.1",
    "solhint-plugin-openzeppelin": "file:scripts/solhint-custom",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "commitlint": {
    "extends": [
      "@ballcat/commitlint-config-gitmoji"
    ]
  },
  "dependencies": {
    "@erc3643org/erc-3643": "^4.2.0-beta1",
    "@onchain-id/solidity": "^2.2.2-beta3",
    "@chainlink/contracts": "^1.4.0",
    "@openzeppelin/contracts": "^5.4.0",
    "forge-std": "github:foundry-rs/forge-std#v1.10.0"
  },
  "overrides": {
    "@erc-3643org/erc-3643": {
      "@openzeppelin/contracts": "^4.8.3",
      "@openzeppelin/contracts-upgradeable": "^4.8.3"
    }
  }
}
